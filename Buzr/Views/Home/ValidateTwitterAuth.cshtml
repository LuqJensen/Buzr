@using Tweetinvi.Models

@if (@ViewBag.User != null)
{
    <h2>Twitter Authentication Complete!</h2>
    <p>Welcome <b>@ViewBag.User.Name</b>, you've successfully been authenticated via Twitter.</p>
}
else
{
    <h2>Authentication failed!</h2>
    <p>Something went wrong during the authentication, please <a href="/Home/TwitterAuth">try again</a>!</p>
}

@{
    var user = ViewBag.User as IAuthenticatedUser;
    var tweets = user.GetMentionsTimeline();
    var myReplies = user.GetHomeTimeline();

}

    <ul>
        @foreach (var v in tweets)
        {
        <li>
            <a href="/Tweet/FuzzyMatches/@v.Id">@v.Text</a>
            @foreach (var t in myReplies)
            {
                if (t.InReplyToStatusId == v.Id)
                {
                    <span>✔️</span>
                }
            }
        </li>
         }
    </ul>